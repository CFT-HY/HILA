ADDITION = -DMSIZE=2
OPTS = -DNDIM=4  $(ADDITION)

TRANSFORMER = ../../build/transformer -DAVX -target:VECTORIZE=32
CC = mpic++ -DUSE_MPI -mavx2 -mfma -DAVX

CFLAGS = -O3 $(OPTS)
CXXFLAGS = -O3 -x c++ --std=c++17 $(OPTS)


%.exe: %.tr.o Makefile inputs.o mersenne_inline.o lattice.o setup_layout_generic.o map_node_layout_trivial.o com_mpi.o
	$(CC) -o $@ $< inputs.o mersenne_inline.o lattice.o setup_layout_generic.o map_node_layout_trivial.o com_mpi.o

%.cpt: %.cpp Makefile
	$(TRANSFORMER) $<  $(ADDITION)

%.tr.o : %.cpt
	$(CC) $(CXXFLAGS) $< -c -o $@

%.tr.s : %.cpt
	$(CC) $(CXXFLAGS) $< -S -o $@


%.o : ../plumbing/%.cpp
	$(CC) $(CXXFLAGS) $< -c

%.o : %.cpp
	$(CC) $(CFLAGS) $< -c

%.o : %.c
	$(CC) $(CFLAGS) $< -c

clean:
	rm -rf *.o *.cpt

cleanall:
	rm -rf *.o *.cpt *.exe
