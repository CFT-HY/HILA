OPTS = -DNDIM=4

TRANSFORMER = export CPATH=/projappl/project_2001973/llvm/lib/clang/8.0.1/include ; ../../build/transformer -DPUHTI_TRANSFORMER_CUDA
CC = g++

CFLAGS = -O3 $(OPTS)
CXXFLAGS = -O3 -x c++ $(OPTS)

%.exe: %.tr.o Makefile_puhti mersenne_inline.o lattice.o memory.o setup_layout_generic.o map_node_layout_trivial.o
	$(CC) -o $@ $< mersenne_inline.o lattice.o memory.o setup_layout_generic.o map_node_layout_trivial.o

%.cpt: %.cpp Makefile_puhti
	$(TRANSFORMER) $<

%.tr.o : %.cpt
	$(CC) $(CXXFLAGS) $< -c -o $@

%.o : ../plumbing/%.cpp
	$(CC) $(CXXFLAGS) $< -c

%.o : %.c
	$(CC) $(CFLAGS) $< -c

clean:
	rm -rf *.o *.cpt

cleanall:
	rm -rf *.o *.cpt *.exe
