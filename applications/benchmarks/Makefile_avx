ADDITION = -DMSIZE=2
OPTS = -DNDIM=4  $(ADDITION)

HILAPP = ../../hilapp/build/hilapp  -DAVX -DUSE_MPI -target:AVX -I../../libraries/ -I/usr/lib/x86_64-linux-gnu/openmpi/include/ -I/usr/lib/openmpi/include/

CC = mpic++  -DUSE_MPI -mavx2 -mfma -DAVX

.PRECIOUS: %.cpt

CFLAGS = -Ofast $(OPTS)
CXXFLAGS = -Ofast -x c++ --std=c++17 $(OPTS)
# CXXFLAGS = -g -x c++ --std=c++17 $(OPTS)

%.exe: %.tr.o Makefile inputs.o mersenne_inline.o lattice.o setup_layout_vector.o map_node_layout_trivial.o com_mpi.o memalloc.o timers.o test_gathers.o
	$(CC) -o $@ $< inputs.o mersenne_inline.o lattice.o setup_layout_vector.o map_node_layout_trivial.o com_mpi.o memalloc.o timers.o test_gathers.o

%.cpt: %.cpp Makefile
	$(HILAPP) $(ADDITION) $<

%.tr.o : %.cpt
	$(CC) $(CXXFLAGS) $< -c -o $@

%.tr.s : %.cpt
	$(CC) $(CXXFLAGS) $< -S -o $@

lattice.cpt : ../../libraries/plumbing/lattice.cpp
	$(HILAPP) $(ADDITION) $<

lattice.o : lattice.cpt
	$(CC) $(CXXFLAGS) $< -c

test_gathers.cpt : ../../libraries/plumbing/test_gathers.cpp
	$(HILAPP) $(ADDITION) $<

test_gathers.o : test_gathers.cpt
	$(CC) $(CXXFLAGS) $< -c

%.o : ../../libraries/plumbing/%.cpp
	$(CC) $(CXXFLAGS) $< -c

%.o : %.cpp
	$(CC) $(CXXFLAGS) $< -c

%.o : %.c
	$(CC) $(CFLAGS) $< -c

clean:
	rm -rf *.o *.cpt

cleanall:
	rm -rf *.o *.cpt *.exe
